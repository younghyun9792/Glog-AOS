<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="630dp"
        android:background="@drawable/main_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo_box"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="@id/logo"
        app:layout_constraintRight_toRightOf="@id/logo"
        app:layout_constraintTop_toTopOf="@id/logo" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp"
        />

    <ImageView
        android:id="@+id/login_box"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/login_box"
        app:layout_constraintBottom_toTopOf="@id/signup_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.93"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/signup_box"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/signup_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.93"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="여기에서 너의 생각을\n 남들에게 이야기해봐"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardbold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/login_box"
        app:layout_constraintRight_toRightOf="@id/login_box"
        app:layout_constraintBottom_toBottomOf="@id/login_box"
        app:layout_constraintTop_toTopOf="@id/login_box"
        android:fontFamily="@font/pretendardextrabold"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/main_color"
        app:layout_constraintLeft_toLeftOf="@id/signup_box"
        app:layout_constraintRight_toRightOf="@id/signup_box"
        app:layout_constraintBottom_toBottomOf="@id/signup_box"
        app:layout_constraintTop_toTopOf="@id/signup_box"
        android:fontFamily="@font/pretendardextrabold"
        android:textSize="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>