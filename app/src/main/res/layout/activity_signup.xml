<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/back_btn"
        android:text="취소"
        android:fontFamily="@font/pretendardmedium"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/back_btn"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="107dp"
        android:layout_height="37dp"
        android:background="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/main_gif"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginTop="95dp"
        />

    <ImageView
        android:id="@+id/id_input_box"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/input_box"
        app:layout_constraintTop_toBottomOf="@id/main_gif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.93"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:id="@+id/id_input_box_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/id_input_box"
        app:layout_constraintTop_toTopOf="@+id/id_input_box"
        app:layout_constraintBottom_toBottomOf="@id/id_input_box"
        android:background="@drawable/input_box_id_icon"
        android:layout_marginLeft="18dp"
        />

    <EditText
        android:id="@+id/id_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:hint="사용하실 아이디를 입력해주세요."
        android:layout_marginLeft="4dp"
        android:background="@null"
        android:textColor="@color/text_color"
        android:textSize="15dp"
        android:textColorHint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@id/id_input_box"
        app:layout_constraintLeft_toRightOf="@id/id_input_box_icon"
        app:layout_constraintTop_toTopOf="@id/id_input_box"
        />

    <ImageView
        android:id="@+id/pw_input_box"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/input_box"
        app:layout_constraintTop_toBottomOf="@id/main_gif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.93"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/pw_input_box_icon"
        android:layout_width="15dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/pw_input_box"
        app:layout_constraintTop_toTopOf="@+id/pw_input_box"
        app:layout_constraintBottom_toBottomOf="@id/pw_input_box"
        android:background="@drawable/input_box_pw_icon"
        android:layout_marginLeft="22dp"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/pw_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:hint="사용하실 비밀번호를 입력해주세요."
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:textColor="@color/text_color"
        android:textSize="15dp"
        android:textColorHint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@id/pw_input_box"
        app:layout_constraintLeft_toRightOf="@id/pw_input_box_icon"
        app:layout_constraintTop_toTopOf="@id/pw_input_box"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/pw_re_input_box"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/input_box"
        app:layout_constraintTop_toBottomOf="@id/pw_input_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.93"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/pw_re_input_box_icon"
        android:layout_width="15dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/pw_re_input_box"
        app:layout_constraintTop_toTopOf="@+id/pw_re_input_box"
        app:layout_constraintBottom_toBottomOf="@id/pw_re_input_box"
        android:background="@drawable/input_box_pw_icon"
        android:layout_marginLeft="22dp"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/pw_re_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:hint="사용하실 비밀번호를 한번 더 입력해주세요."
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:textColor="@color/text_color"
        android:textSize="15dp"
        android:textColorHint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@id/pw_re_input_box"
        app:layout_constraintLeft_toRightOf="@id/pw_re_input_box_icon"
        app:layout_constraintTop_toTopOf="@id/pw_re_input_box"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/next_box"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/login_box"
        app:layout_constraintTop_toBottomOf="@id/id_input_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.93"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/next_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/next_box"
        app:layout_constraintRight_toRightOf="@id/next_box"
        app:layout_constraintBottom_toBottomOf="@id/next_box"
        app:layout_constraintTop_toTopOf="@id/next_box"
        android:fontFamily="@font/pretendardextrabold"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/fail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미 존재하는 아이디에요."
        android:textColor="@color/fail_text_color"
        android:fontFamily="@font/pretendardmedium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_box"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/next_box2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/login_box"
        app:layout_constraintTop_toBottomOf="@id/pw_re_input_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.93"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/next2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/next_box2"
        app:layout_constraintRight_toRightOf="@id/next_box2"
        app:layout_constraintBottom_toBottomOf="@id/next_box2"
        app:layout_constraintTop_toTopOf="@id/next_box2"
        android:fontFamily="@font/pretendardextrabold"
        android:textSize="16dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/feat_pw_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호는 8자리 이상 및 기호를 포함해주세요."
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="@id/next_box2"
        app:layout_constraintRight_toRightOf="@id/next_box2"
        app:layout_constraintTop_toBottomOf="@id/next_box2"
        android:fontFamily="@font/pretendardextrabold"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/nickname_input_box"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/input_box"
        app:layout_constraintTop_toBottomOf="@id/main_gif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.93"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/nickname_input_box_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/nickname_input_box"
        app:layout_constraintTop_toTopOf="@+id/nickname_input_box"
        app:layout_constraintBottom_toBottomOf="@id/nickname_input_box"
        android:background="@drawable/input_box_id_icon"
        android:layout_marginLeft="18dp"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/nickname_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:hint="사용하실 닉네임을 입력해주세요."
        android:layout_marginLeft="4dp"
        android:background="@null"
        android:textColor="@color/text_color"
        android:textSize="15dp"
        android:textColorHint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@id/nickname_input_box"
        app:layout_constraintLeft_toRightOf="@id/nickname_input_box_icon"
        app:layout_constraintTop_toTopOf="@id/nickname_input_box"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/next_box3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/login_box"
        app:layout_constraintTop_toBottomOf="@id/nickname_input_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.93"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/next_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/next_box3"
        app:layout_constraintRight_toRightOf="@id/next_box3"
        app:layout_constraintBottom_toBottomOf="@id/next_box3"
        app:layout_constraintTop_toTopOf="@id/next_box3"
        android:fontFamily="@font/pretendardextrabold"
        android:textSize="16dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/fail_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미 존재하는 닉네임이예요!"
        android:textColor="@color/fail_text_color"
        app:layout_constraintLeft_toLeftOf="@id/next_box3"
        app:layout_constraintRight_toRightOf="@id/next_box3"
        app:layout_constraintTop_toBottomOf="@id/next_box3"
        android:fontFamily="@font/pretendardextrabold"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>